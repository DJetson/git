<Controls:GameControl x:Class="GameObjects.Controls.BoundsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Controls="clr-namespace:GameObjects.Controls"
             mc:Ignorable="d" Canvas.ZIndex="0"
                      d:DesignWidth="300" d:DesignHeight="300"
             Canvas.Left="{Binding DrawPosition.X}" 
             Canvas.Top="{Binding DrawPosition.Y}">
    <Grid >
        <Rectangle Width="{Binding Bounds.Width}" 
                   Height="{Binding Bounds.Height}" 
                   StrokeThickness="5" 
                   Stroke="Black" Fill="White" />
    </Grid>
</Controls:GameControl>
