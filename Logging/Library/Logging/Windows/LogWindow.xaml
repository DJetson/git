<Window
	x:Name="CONTROL_LogWindow"
	x:Class="Logging.LogWindow"
	Title="LogWindow"
	SizeToContent="Width"
	Height="400"
	WindowStyle="SingleBorderWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:Logging="clr-namespace:Logging"
    xmlns:Converters="clr-namespace:Logging.Converters"
	xmlns:Controls="clr-namespace:Logging.Controls"
	xmlns:Behaviors="clr-namespace:Logging.Behaviors" >
    <!--ContentRendered="CONTROL_LogWindow_ContentRendered"-->

    <Window.Resources>
        <Converters:LogLevelToBooleanConverter
			x:Key="LogLevelToBoolean" />
        <HierarchicalDataTemplate
			x:Key="TreeViewTemplate">
            <TreeViewItem
				Behaviors:TreeViewItemBehavior.IsBroughtIntoViewWhenSelected="True"
				Header="{Binding Name}"
				ItemsSource="{Binding Children}"
				ItemTemplate="{DynamicResource TreeViewTemplate}">
                <TreeViewItem.Style>
                    <Style
						TargetType="TreeViewItem">
                        <Style.Triggers>
                            <DataTrigger
								Binding="{Binding HasPriority}"
								Value="True">
                                <Setter
									Property="Foreground"
									Value="Black"/>
                            </DataTrigger>
                            <DataTrigger
								Binding="{Binding HasPriority}"
								Value="False">
                                <Setter
									Property="Foreground"
									Value="LightGray"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TreeViewItem.Style>
            </TreeViewItem>
        </HierarchicalDataTemplate>
    </Window.Resources>
    <Border
		BorderBrush="Black"
		BorderThickness="2"
		Padding="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition
					Height="Auto" />
                <RowDefinition
					Height="*" />
            </Grid.RowDefinitions>

            <Menu
				Grid.Row="0">
                <MenuItem
					Header="File">
                    <MenuItem.Items>
                        <MenuItem
							x:Name="Menu_FileExit"
							Header="Exit"
							Click="Menu_FileExit_Click" />
                    </MenuItem.Items>
                </MenuItem>
                <MenuItem
					Header="Edit">
                    <MenuItem.Items>
                        <MenuItem
							x:Name="Menu_EditCut"
							Header="Cut"
							Click="Menu_EditCut_Click" />
                        <MenuItem
							x:Name="Menu_EditCopy"
							Header="Copy"
							Click="Menu_EditCopy_Click" />
                        <MenuItem
							x:Name="Menu_EditPaste"
							Header="Paste"
							Click="Menu_EditPaste_Click" />
                        <MenuItem
							x:Name="Menu_EditClearLog"
							Header="Clear Log"
							Click="Menu_EditClearLog_Click" />
                    </MenuItem.Items>

                </MenuItem>
            </Menu>
            <Grid
				Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
						Width="Auto" />
                    <ColumnDefinition
						Width="Auto" />
                    <ColumnDefinition
						Width="Auto" />
                    <ColumnDefinition
						Width="Auto" />
                    <ColumnDefinition
						Width="Auto" />
                    <ColumnDefinition
						Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition
						Height="Auto" />
                    <RowDefinition
						Height="*" />
                </Grid.RowDefinitions>
                <!--<Border
					Grid.Row="1"
					x:Name="FilterButtonsGroup"
					Background="LightGray"
					BorderBrush="DarkGray"
					BorderThickness="1"
					Margin="0,0,0,0">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition />
							<ColumnDefinition />
							<ColumnDefinition />
							<ColumnDefinition />
							<ColumnDefinition />
						</Grid.ColumnDefinitions>-->

                <ToggleButton
					x:Name="Verbose"
					IsTabStop="True"
					TabIndex="0"
					Grid.Column="0"
					Grid.Row="0"
					Margin="2,2,1,2"
					Click="FilterToggleButton_Click"
					IsChecked="{Binding VisibleTraceLevel,ElementName=CONTROL_LogWindow,Converter={StaticResource LogLevelToBoolean},ConverterParameter=Verbose}"
					Tag="Verbose"
					Content="Verbose" />
                <ToggleButton
					x:Name="Info"
					IsTabStop="True"
					TabIndex="1"
					Grid.Column="1"
					Grid.Row="0"
					Margin="1,2,1,2"
					Click="FilterToggleButton_Click"
                    IsChecked="{Binding VisibleTraceLevel,ElementName=CONTROL_LogWindow,Converter={StaticResource LogLevelToBoolean},ConverterParameter=Info}"
					Tag="Info"
					Content="Info" />
                <ToggleButton
					x:Name="Warning"
					IsTabStop="True"
					TabIndex="2"
					Grid.Column="2"
					Grid.Row="0"
					Margin="1,2,1,2"
					Click="FilterToggleButton_Click"
                    IsChecked="{Binding VisibleTraceLevel,ElementName=CONTROL_LogWindow,Converter={StaticResource LogLevelToBoolean},ConverterParameter=Warning}"
					Tag="Warning"
					Content="Warning" />
                <ToggleButton
					x:Name="Error"
					IsTabStop="True"
					TabIndex="3"
					Grid.Column="3"
					Grid.Row="0"
					Margin="1,2,1,2"
					Click="FilterToggleButton_Click"
                    IsChecked="{Binding VisibleTraceLevel,ElementName=CONTROL_LogWindow,Converter={StaticResource LogLevelToBoolean},ConverterParameter=Error}"
					Tag="Error"
					Content="Error" />
                <!--<ToggleButton
					x:Name="Debug"
					IsTabStop="True"
					TabIndex="4"
					Grid.Column="4"
					Grid.Row="0"
					Margin="1,2,2,2"
					Click="FilterToggleButton_Click"
					IsChecked="{Binding LogLevel,ElementName=CONTROL_LogWindow,Converter={StaticResource LogLevelToBoolean},ConverterParameter=Debug}"
					Tag="Debug"
					Content="Debug" />-->
                <Controls:PromptBox
					Grid.Column="5"
					Grid.Row="0"
                    Text="{Binding TargetMessageType,ElementName=CONTROL_LogWindow}"
					Prompt="Find a Message Type"
					TextChanged="PromptBox_TextChanged" />

                <!--Text="{Binding TargetMessageType,ElementName=CONTROL_LogWindow}" />-->

                <!--<Border
					x:Name="MessageList"
					Grid.Column="0"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					Background="LightGray"
					BorderBrush="DarkGray"
					BorderThickness="1">-->

                <ListView
					x:Name="LogMessageList"
					FontFamily="Consolas"
					Margin="1"
					Grid.Column="0"
					Grid.Row="1"
					Grid.ColumnSpan="5"
					Background="WhiteSmoke"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					ItemsSource="{Binding OutputMessageList,ElementName=CONTROL_LogWindow}">

                    <ListView.View>
                        <GridView
							AllowsColumnReorder="False">
                            <GridView.Columns>
                                <GridViewColumn
									Header="Message Type"
									Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
												Text="{Binding TraceLevel}">
                                                <TextBlock.Style>
                                                    <Style
														TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger
																Binding="{Binding TraceLevel}"
																Value="Info">
                                                                <Setter
																	Property="Foreground"
																	Value="DarkGreen" />
                                                            </DataTrigger>
                                                            <DataTrigger
																Binding="{Binding TraceLevel}"
																Value="Warning">
                                                                <Setter
																	Property="Foreground"
																	Value="DarkGoldenrod" />
                                                            </DataTrigger>
                                                            <DataTrigger
																Binding="{Binding TraceLevel}"
																Value="Error">
                                                                <Setter
																	Property="Foreground"
																	Value="DarkRed" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn
									Header="Message Source"
									Width="300">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
												Text="{Binding Source}">
                                                <TextBlock.Style>
                                                    <Style
														TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger
																Binding="{Binding TraceLevel}"
																Value="Info">
                                                                <Setter
																	Property="Foreground"
																	Value="DarkGreen" />
                                                            </DataTrigger>
                                                            <DataTrigger
																Binding="{Binding TraceLevel}"
																Value="Warning">
                                                                <Setter
																	Property="Foreground"
																	Value="DarkGoldenrod" />
                                                            </DataTrigger>
                                                            <DataTrigger
																Binding="{Binding TraceLevel}"
																Value="Error">
                                                                <Setter
																	Property="Foreground"
																	Value="DarkRed" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn
									Header="Message"
									Width="500">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
												Text="{Binding Detail}">
                                                <TextBlock.Style>
                                                    <Style
														TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger
																Binding="{Binding TraceLevel}"
																Value="Info">
                                                                <Setter
																	Property="Foreground"
																	Value="DarkGreen" />
                                                            </DataTrigger>
                                                            <DataTrigger
																Binding="{Binding TraceLevel}"
																Value="Warning">
                                                                <Setter
																	Property="Foreground"
																	Value="DarkGoldenrod" />
                                                            </DataTrigger>
                                                            <DataTrigger
																Binding="{Binding TraceLevel}"
																Value="Error">
                                                                <Setter
																	Property="Foreground"
																	Value="DarkRed" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView.Columns>
                        </GridView>
                    </ListView.View>
                </ListView>

                <ScrollViewer
                    Grid.Row="1"
					Grid.Column="5">
                    <TreeView DataContext="{Binding MessageTypes,ElementName=CONTROL_LogWindow}"
						x:Name="LogMessageTypesFilter"
						IsTabStop="True"
						TabIndex="5">
                        <TreeViewItem
							Header="{Binding .Name}"
							ItemsSource="{Binding .Children}"
							ItemTemplate="{DynamicResource TreeViewTemplate}">
                            <TreeViewItem.Style>
                                <Style
									TargetType="TreeViewItem">
                                    <Style.Triggers>
                                        <DataTrigger
											Binding="{Binding .HasPriority, UpdateSourceTrigger=PropertyChanged}"
											Value="True">
                                            <Setter
												Property="Foreground"
												Value="Black"></Setter>
                                        </DataTrigger>
                                        <DataTrigger
											Binding="{Binding .HasPriority, UpdateSourceTrigger=PropertyChanged}"
											Value="False">
                                            <Setter
												Property="Foreground"
												Value="LightGray"></Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TreeViewItem.Style>
                        </TreeViewItem>
                    </TreeView>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Border>
</Window>
